    "db:migrate:dev": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed:prod": "node dist/prisma/seed.js",
    "db:seed:dev": "ts-node ./src/infrastructure/prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio"
